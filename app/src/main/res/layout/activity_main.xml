<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john.hoangp19_hw2.MainActivity">

    <com.example.john.hoangp19_hw2.AppSurfaceView
        android:id="@+id/SurfaceViewPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red: "
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:elevation="0dp"
        android:text="Green: "
        android:textColor="#07fe03"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Blue: "
        android:textColor="#000dff"
        android:textSize="26sp" />

    <SeekBar
        android:id="@+id/RedSeek"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:max="255" />

    <SeekBar
        android:id="@+id/GreenSeek"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="46dp"
        android:max="255" />

    <SeekBar
        android:id="@+id/BlueSeek"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="78dp"
        android:max="255" />

    <TextView
        android:id="@+id/redValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="725dp"
        android:textColor="@android:color/background_light"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/greenValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="725dp"
        android:layout_marginTop="36dp"
        android:textColor="@android:color/background_light"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/blueValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="725dp"
        android:layout_marginTop="72dp"
        android:textColor="@android:color/background_light"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/elementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:background="@drawable/border_style"
        android:text="Element"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="108dp"
        android:textColor="#191970"
        android:textSize="26sp" />

</FrameLayout>
